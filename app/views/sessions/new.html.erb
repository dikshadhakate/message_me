<h1 align="center">Welcome To MessageMe - a complete chat app</h1>
<h2 class="ui center aligned medium icon header">
  <i class="circular orange circle notch icon"></i>
  Log In to continue
</h2>	
<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
        <%= form_for(:session , html: {class: "ui form", role: "form"}, url: login_path) do |f| %>
          <div class="field">
            <%= f.label :username %>
            <!-- <label>Username</label> -->
            <div class="ui left icon input">
              <%= f.text_field :username, placeholder: "Username"%>
              <!-- <input type="text" placeholder="Username"> -->
              <i class="user icon"></i>
            </div>
          </div>
          <div class="field">
            <%= f.label :password %>
            <!-- <label>Password</label> -->
            <div class="ui left icon input">
              <%= f.text_field :password, placeholder: "Password"%>
              <!-- <input type="password"> -->
              <i class="lock icon"></i>
            </div>
          </div>
          <%= f.submit "Login", class: "ui orange submit button"%>
          <!-- <div class="ui orange submit button">Login</div> -->
        <% end %>  
    </div>
    <div class="middle aligned column">
      <div class="ui big orange button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
